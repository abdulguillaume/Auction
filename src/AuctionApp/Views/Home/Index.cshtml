<html ng-app="AuctionApp">
<head>
    <title>AuctionApp</title>
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    

    <base href="/" />
    <style>
        /*img {
            max-width: 150px;
            max-height: 150px;
        }*/

        
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}
    </style>
</head>
<body ng-controller="AccountController as account" ng-cloak>
    <div class="container">
        
        <div id="horzNav">
            <div id="logo">
                <h1>Let's Make It Count!</h1>
                <h4>Best Auction In Town.</h4>
            </div>
            
          <a href="/">Home</a> /
           <a href="/addItem">Add Item</a> /
           <a href="/login" ng-show="!account.isLoggedIn()">Login</a>
           <a href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a>
           <div id="userInfo" ng-show="account.isLoggedIn()">
               [{{account.getUserName()}}]
           </div> 
        </div>
        <hr />

        <ui-view></ui-view>

        <footer>
            <!-- copyright is normally placed in a small tag -->
            <small>copyright 2017</small>
        </footer>

    </div>

    <!-- Library Files -->
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/bower_components/angular-touch/angular-touch.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="/bower_components/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="~/bower_components/angular-file-upload/dist/angular-file-upload.js"></script>
    <script src="~/bower_components/ng-file-upload/dist/ng-file-upload.js"></script>
    <script src="~/bower_components/angular-route/angular-route.js"></script>

    <!-- App Files-->
    <script src="/ngapp/app.js"></script>
    <script src="/ngapp/controllers/controllers.js"></script>
    <script src="/ngapp/services/services.js"></script>

    <!-- Security -->
    <script src="/ngapp/controllers/accountcontroller.js"></script>
    <script src="/ngapp/services/accountservice.js"></script>

</body>
</html>
